#!/bin/sh

case "$1" in
    reboot|poweroff)
    ;;
    *)
        echo "Invalid action '$1' for rc.shutdown" 1>&2
        exit 1
        ;;
esac

if [ -f "/etc/sinit.d/rc.shutdown" ];then
    . /etc/sinit.d/rc.shutdown
else
    . /lib/init/rc.shutdown
fi

case "$1" in
    reboot)
        ubase-box halt -r
        ;;
    poweroff)
        ubase-box halt -p
        ;;
esac
