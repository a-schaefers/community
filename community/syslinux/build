#!/bin/sh -e

export CCACHE_DISABLE=1

unset CFLAGS LDFLAGS

# Fix missing <sys/sysmacros.h> include.
sed -i 's@vfs.h>@vfs.h>\n#include <sys/sysmacros.h>@' extlinux/main.c

make clean

make PYTHON=python \
     bios \
     efi64 \
     installer

make -j1 \
     MANDIR=/usr/share/man \
     INSTALLROOT="$1" \
     bios \
     efi64 \
     install
